<%- include('../../../partials/js.ejs') %><%- include('edit_feature_modal.ejs') %><%- include('edit_activity_modal.ejs') %>
<script>
  $(document).ready(function () {
    $("#dataTableFeature").DataTable();
    $("#dataTableActivity").DataTable();
  });
  CKEDITOR.replace("about");
</script>
<script>
  $("#dataTableFeature").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let qty = $(this).data("qty");
    let itemId = $(this).data("itemid");
    $("#edit-feature-modal").modal("show");
    $(".id").val(id);
    $(".name").val(name);
    $(".qty").val(qty);
    $(".itemId").val(itemId);
  });
  $("#dataTableActivity").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let type = $(this).data("type");
    let itemId = $(this).data("itemid");
    $("#edit-activity-modal").modal("show");
    $(".id").val(id);
    $(".name").val(name);
    $(".type").val(type);
    $(".itemId").val(itemId);
  });
</script>
