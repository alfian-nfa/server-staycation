<div class="tab-pane fade" id="show-activity">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
            <div class="modal-body">
              <div class="form-group">
                <label for="name">Activity Name</label>
                <input type="text" class="form-control" name="name" placeholder="Enter name.." required />
              </div>
              <div class="form-group">
                <label for="type">Type</label>
                <input type="text" class="form-control" name="type" placeholder="Enter type.." required />
              </div>
              <div class="form-group">
                <label for="image">Activity Image</label>
                <input type="file" class="form-control" name="image" required />
              </div>
              <div class="pt-2">
                <input type="hidden" name="itemId" value="<%= itemId %>" />
                <button type="submit" class="btn btn-primary">Add</button>
              </div>
            </div>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
              <thead class="text-center">
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Images</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for(let x = 0; x < activity.length; x++){%>
                <tr class="text-center">
                  <td><%= x + 1 %></td>
                  <td><%= activity[x].name %></td>
                  <td><%= activity[x].type %></td>
                  <td><img src="../../../<%= activity[x].imageUrl %>" alt="Activity Image" width="30" /></td>
                  <td>
                    <form action="/admin/item/<%= itemId %>/activity/<%= activity[x].id %>?_method=DELETE" method="POST">
                      <a
                        href="javascript:void()"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= activity[x].id %>"
                        data-name="<%= activity[x].name %>"
                        data-type="<%= activity[x].type %>"
                        data-itemid="<%= activity[x].itemId %>"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
                <%}%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
